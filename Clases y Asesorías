<body>
  <div class="header">üë§ Bienvenido @asesor</div>

  <div class="container">
    <!-- Asesor√≠as -->
    <div class="section">
      <div class="title">Asesor√≠as</div>
      <div class="buttons-container">
        <button onclick="agregarAsesoria()">‚ûï</button>
        <button onclick="borrarAsesorias()">üóëÔ∏è</button>
        <button onclick="buscarAsesoria()">üîç</button>
      </div>
      <div id="asesorias-container"></div>
    </div>

    <!-- Materias -->
    <div class="section">
      <div class="title">Materias</div>
      <div class="buttons-container">
        <button onclick="agregarMateria()">‚ûï</button>
        <button onclick="borrarMaterias()">üóëÔ∏è</button>
        <button onclick="buscarMateria()">üîç</button>
      </div>
      <div class="materias-table">
        <div class="materias-header">Nombre</div>
        <div class="materias-header">Descripci√≥n</div>
        <div id="materias-container" class="materias-grid"></div>
      </div>
    </div>
  </div>

  <script>
    let asesorias = [
      {
        nombre: "MATEM√ÅTICAS",
        horario: "3:00 a 4:00 pm",
        asesor: "@usuario",
        modalidad: "Presencial",
        imagen: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQN9jZ7n8rUMxSK27j7UXQu79JhXabGS3CnmQ&s"
      },
      {
        nombre: "QU√çMICA",
        horario: "3:00 a 4:00 pm",
        asesor: "@usuario",
        modalidad: "Presencial",
        imagen: "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR_nfc2IxR-RG4nI8XBWskpL7qMfcxyhZjHMg&s"
      }
    ];

    let materias = [
      {
        nombre: "Matem√°ticas I",
        descripcion: "Introducci√≥n al √°lgebra, trabajando con ecuaciones, expresiones y funciones b√°sicas."
      },
      {
        nombre: "Qu√≠mica I",
        descripcion: "Estudia la estructura de la materia, enlaces qu√≠micos y reacciones b√°sicas."
      }
    ];

    function renderizarAsesorias() {
      const contenedor = document.getElementById("asesorias-container");
      contenedor.innerHTML = "";
      asesorias.forEach((a) => {
        contenedor.innerHTML += `
          <div class="card">
            <img src="${a.imagen}" alt="imagen">
            <div class="card-info">
              <h3>${a.nombre}</h3>
              <p><strong>Horario:</strong> ${a.horario}</p>
              <p><strong>Asesor:</strong> ${a.asesor}</p>
              <p><strong>Modalidad:</strong> ${a.modalidad}</p>
            </div>
          </div>`;
      });
    }

    function renderizarMaterias() {
      const contenedor = document.getElementById("materias-container");
      contenedor.innerHTML = "";
      materias.forEach(m => {
        contenedor.innerHTML += `
          <div class="cell">${m.nombre}</div>
          <div class="cell">${m.descripcion}</div>`;
      });
    }

    function agregarAsesoria() {
      const nombre = prompt("Nombre de la asesor√≠a:");
      const horario = prompt("Horario:");
      const modalidad = prompt("Modalidad:");
      const asesor = prompt("Asesor:");
      if (nombre && horario && modalidad && asesor) {
        asesorias.push({
          nombre,
          horario,
          modalidad,
          asesor,
          imagen: "https://via.placeholder.com/150"
        });
        renderizarAsesorias();
      }
    }

    function agregarMateria() {
      const nombre = prompt("Nombre de la materia:");
      const descripcion = prompt("Descripci√≥n:");
      if (nombre && descripcion) {
        materias.push({ nombre, descripcion });
        renderizarMaterias();
      }
    }

    function borrarAsesorias() {
      asesorias = [];
      renderizarAsesorias();
    }

    function borrarMaterias() {
      materias = [];
      renderizarMaterias();
    }

    function buscarAsesoria() {
      const consulta = prompt("Buscar asesor√≠a por nombre:");
      if (!consulta) return;
      const resultado = asesorias.filter(a => a.nombre.toLowerCase().includes(consulta.toLowerCase()));
      if (resultado.length > 0) {
        alert("Se encontraron " + resultado.length + " coincidencias.");
      } else {
        alert("No se encontr√≥ ninguna asesor√≠a con ese nombre.");
      }
    }

    function buscarMateria() {
      const consulta = prompt("Buscar materia por nombre:");
      if (!consulta) return;
      const resultado = materias.filter(m => m.nombre.toLowerCase().includes(consulta.toLowerCase()));
      if (resultado.length > 0) {
        alert("Se encontraron " + resultado.length + " coincidencias.");
      } else {
        alert("No se encontr√≥ ninguna materia con ese nombre.");
      }
    }

    renderizarAsesorias();
    renderizarMaterias();
  </script>
